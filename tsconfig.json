{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "removeComments": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
